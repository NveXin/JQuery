/* 导航部分 */
#header
  position fixed
  width 100%
  background #fff
  opacity 0.9
  border-bottom 1px solid #e5e5e5
  z-index 2
  .herder-wrapper
    width 1520px
    height 70px
    display flex
    .containers
      width 1200px
      height 65px
      margin 0 auto
      .content
        display flex
        width 1200px
        height 65px
        .nav-header
          width 30%
          display flex
          height 40px
          margin-top 8px
        .nav-items
          display flex
          width 70%
          height 40px
          .nav-lists
            display flex
            list-style none
            margin-left 50px
            line-height 65px
            .nav-list
              margin-right 20px
              .nav-list a:hover
                color red
              #showCity
                color #000
            .nav-list a
              text-decoration none
              color #000
              font-weight bold
            .nav-list:nth-child(2) a
              margin-left 25px
              color red
            .nav-list:nth-child(8) a
              background red
              color white


/* 轮播 */
#wraps
  position relative
  top 70px
  width 100%
  height 420px
  .swiper-container
    position relative
    width 1520px
    height 420px
    .swiper-wrapper
      width 5760px
      overflow hidden
      .swiper-slide
        position absolute
        top 0
        left 0
        img
          width 100%
          height 420px
    .banner-nav
      position relative
      width 180px
      height 422px
      z-index 2
      .banner-items
        position absolute
        left 160px
        width 180px
        height 420px
        margin 0 auto
        background #000
        opacity 0.5
        .lists li
          width 180px
          height 42px
          list-style none
          line-height 42px
        .lists li a
          display block
          text-align center
          color white
        .lists li a .menu-img1
          position absolute
          top 17px
          margin-left 15px

/* 更多 */
.box
  position relative
  width 100%
  height 516px
  top 50px
  .box-nav
    width 1200px
    height 446px
    margin 0 auto
    .box-top1
      text-align center
      span
        display block
        font-size 28px
        color #3d3838
      span:nth-child(1)
        font-weight 800
      .box-center
        height 28px
      .box-center a
        display block
        width 1200px
        height 28px
        color #3d3838;
        font-size: 24px
      .box-center a:hover
        color red
      .many
        font-size 16px
        color black
        margin-top -20px
        float right
      .many:hover
        color red
/* more下半部 */
    .box-bottom1
      width 1200px
      height 375px
      margin-top 30px
      .box-rows
        width 1200px
        height 375px
        &>a
          display block
          border 1px solid lightgray
          width 230px
          height 345px
