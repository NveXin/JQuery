/* 导航部分 */
#header
  position fixed
  width 100%
  background #fff
  opacity 0.9
  border-bottom 1px solid #e5e5e5
  z-index 2
  .herder-wrapper
    width 1520px
    height 70px
    display flex
    .containers
      width 1200px
      height 65px
      margin 0 auto
      .content
        display flex
        width 1200px
        height 65px
        .nav-header
          width 30%
          display flex
          height 40px
          margin-top 8px
        .nav-items
          display flex
          width 70%
          height 40px
          .nav-lists
            display flex
            list-style none
            margin-left 50px
            line-height 65px
            .nav-list
              margin-right 20px
              .nav-list a:hover
                color red
              #showCity
                color #000
            .nav-list a
              text-decoration none
              color #000
              font-weight bold
            .nav-list:nth-child(2) a
              margin-left 25px
              color red
            .nav-list:nth-child(8) a
              background red
              color white


/* 轮播 */
#wraps
  position relative
  top 70px
  width 100%
  height 420px
  .swiper-container
    position relative
    width 1520px
    height 420px
    .swiper-wrapper
      width 5760px
      overflow hidden
      .swiper-slide
        position absolute
        top 0
        left 0
        img
          width 100%
          height 420px
    .banner-nav
      position relative
      width 180px
      height 422px
      z-index 2
      .banner-items
        position absolute
        left 160px
        width 180px
        height 420px
        margin 0 auto
        background #000
        opacity 0.5
        .lists li
          width 180px
          height 42px
          list-style none
          line-height 42px
        .lists li a
          display block
          text-align center
          color white
        .lists li a .menu-img1
          position absolute
          top 17px
          margin-left 15px

/* 更多 */
.box
  position relative
  width 100%
  height 516px
  top 50px
  .box-nav
    width 1200px
    height 446px
    margin 0 auto
    .box-top1
      text-align center
      span
        display block
        font-size 28px
        color #3d3838
      span:nth-child(1)
        font-weight 800
      .box-center
        height 28px
      .box-center a
        display block
        width 1200px
        height 28px
        color #3d3838;
        font-size: 24px
      .box-center a:hover
        color red
      .many
        font-size 16px
        color black
        margin-top -20px
        float right
      .many:hover
        color red
/* more下半部 */
    .box-bottom1
      width 1200px
      height 375px
      margin-top 30px
      .box-rows
        width 1200px
        height 375px
        &>a
          display block
          border 1px solid lightgray
          width 230px
          height 345px
          float left
          margin-right 5px
          img
            width 210px
            height 210px
            margin 10px
  .footer
    width 100%
    .service
      width 1200px
      height 147px
      margin 0 auto
      .service-top
        width 1200px
        text-align center
        h2
          font-size 30px
          font-family "微软雅黑"
          font-weight 800
          color #3d3838
          margin-top 20px
          margin-bottom 10px
          span
            color red
            margin 0 -10px 0 -10px
        p
          display block
          font-size 22px
          color #3d3838
      .service-bottom
        .service-lists
          display flex
          margin-left 40px
          justify-content center
          li
            margin 10px 40px 0 0
            img
              margin-right 10px
              vertical-align middle
    .city
      width 100%
      height 170px
      .hot-city
        width 1200px
        margin 0 auto
        span
          float left
          font-weight bold
          font-size 18px
        .many-city
          display flex
          flex-wrap wrap
          margin-left 30px
          width 1090px
          line-height 30px
          float left
          a
            color #333
            width 98.1px
            height 29.6px
            line-height 29.6px
            text-align center
    .partner
      width 1200px
      margin 0 auto
      background lightgray
      padding-top 30px
      p
        text-align left
        font-weight bold
        color #1d1515
        font-size 18px
      .business
        width 1200px
        height 200px
        margin 0 auto
        display flex
        flex-wrap wrap
        justify-content center
        text-align center
        li
          width 120px
          height 60px
          background white
          margin 12px 0 0 12px
          img
            width 100px
            height 47.36px
            line-height 47.36px
            margin-top 5px
        .business-right
          margin-right 6px
      .copyright
        text-align start
        margin-top -30px
        width 1200px
        height 40px
        span
          color #898989
          line-height 40px
          padding-left 30px

